<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="110dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content"
    android:id="@+id/layout_book_itembook"
    android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="180dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/img_book_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/book1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_name_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bồ câu không đưa thư"
            android:textColor="@android:color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/txt_author_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Nguyễn Nhật Ánh"
            android:textSize="12dp"/>


</LinearLayout>


